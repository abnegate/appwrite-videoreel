<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/fragment_title"
        android:name="io.appwrite.videoreel.title.TitleFragment"
        android:label="@string/log_in"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/titleToLoginAction"
            app:destination="@id/fragment_login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/titleToRegisterAction"
            app:destination="@id/fragment_register"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/fragment_login"
        android:name="io.appwrite.videoreel.login.LoginFragment"
        android:label="@string/log_in"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/loginToFeedAction"
            app:destination="@id/fragment_feed"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">

            <argument
                android:name="userId"
                app:argType="string"
                app:nullable="false" />

            <argument
                android:name="sessionId"
                app:argType="string"
                app:nullable="false" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/fragment_feed"
        android:name="io.appwrite.videoreel.feed.FeedFragment"
        android:label="@string/feed"
        tools:layout="@layout/fragment_feed">

        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="sessionId"
            app:argType="string"
            app:nullable="false" />

        <action
            android:id="@+id/feedToMovieDetailAction"
            app:destination="@id/fragment_movie_detail">

            <argument
                android:name="movieId"
                app:argType="string"
                app:nullable="false" />

        </action>


        <action
            android:id="@+id/feedToShowDetailAction"
            app:destination="@id/fragment_show_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">

            <argument
                android:name="showId"
                app:argType="string"
                app:nullable="false" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/fragment_movie_detail"
        android:name="io.appwrite.videoreel.movie.MovieDetailFragment"
        android:label="@string/movie_details"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="movieId"
            app:argType="string"
            app:nullable="false" />

        <action
            android:id="@+id/movieDetailToConsumeAction"
            app:destination="@id/consumeContentFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">

            <argument
                android:name="movieId"
                app:argType="string"
                app:nullable="false" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/fragment_show_detail"
        android:name="io.appwrite.videoreel.show.ShowDetailFragment"
        android:label="@string/show_details"
        tools:layout="@layout/fragment_show_detail">

        <argument
            android:name="showId"
            app:argType="string"
            app:nullable="false" />

        <action
            android:id="@+id/showDetailToConsumeAction"
            app:destination="@id/consumeContentFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">

            <argument
                android:name="showId"
                app:argType="string"
                app:nullable="false" />

        </action>
    </fragment>

    <fragment
        android:id="@+id/consumeContentFragment"
        android:name="io.appwrite.videoreel.consume.ConsumeContentFragment"
        android:label="@string/consume"
        tools:layout="@layout/fragment_consume_content">

        <argument
            android:name="showEpisodeId"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="movieId"
            app:argType="string"
            app:nullable="true" />

    </fragment>
</navigation>